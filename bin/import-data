#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [ "$DATABASE_PASSWORD" != "" ]
then
    DB_PASS="-p $DATABASE_PASSWORD"
fi

redis-cli select 1 > /dev/null
redis-cli flushdb > /dev/null
$DIR/../node_modules/.bin/uk-rail-import --timetable | mysql -u $DATABASE_USERNAME -h $DATABASE_HOSTNAME $DB_PASS ojp
$DIR/../node_modules/.bin/uk-rail-import --convert-timetable | mysql -u $DATABASE_USERNAME -h $DATABASE_HOSTNAME $DB_PASS ojp
