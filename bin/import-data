#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

wget http://gtfs.gbrail.info/gtfs.zip
pigz -d $DIR/gtfs gtfs.zip
rm gtfs.zip
echo "Creating gtfs schema"
mysql -u root ojp < $DIR/../assets/gtfs-schema.sql
echo "Importing agency"
COLUMNS=$(head -n 1 $DIR/gtfs/agency.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/agency.txt' INTO TABLE agency FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing calendar"
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/calendar.txt' INTO TABLE calendar FIELDS TERMINATED BY ',' IGNORE 1 LINES (service_id,monday,tuesday,wednesday,thursday,friday,saturday,sunday,start_date,@date) SET end_date= STR_TO_DATE(@date,'%Y%m%d')"
echo "Importing routes"
COLUMNS=$(head -n 1 $DIR/gtfs/routes.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/routes.txt' INTO TABLE routes FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing stops"
COLUMNS=$(head -n 1 $DIR/gtfs/stops.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/stops.txt' INTO TABLE stops FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing stop_times"
COLUMNS=$(head -n 1 $DIR/gtfs/stop_times.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/stop_times.txt' INTO TABLE stop_times FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing transfers"
COLUMNS=$(head -n 1 $DIR/gtfs/transfers.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/transfers.txt' INTO TABLE transfers FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing trips"
COLUMNS=$(head -n 1 $DIR/gtfs/trips.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/trips.txt' INTO TABLE trips FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing links"
COLUMNS=$(head -n 1 $DIR/gtfs/links.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/links.txt' INTO TABLE links FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
echo "Importing feed_info"
COLUMNS=$(head -n 1 $DIR/gtfs/feed_info.txt)
mysql -u root ojp -e "LOAD DATA LOCAL INFILE '$DIR/gtfs/feed_info.txt' INTO TABLE feed_info FIELDS TERMINATED BY ',' IGNORE 1 LINES ($COLUMNS)"
rm -rf $DIR/gtfs/

# copying to native format
echo "Creating native schema"
mysql -u root ojp < $DIR/../assets/native-schema.sql

echo "Converting gtfs data to native format"
mysql -u root ojp -e "
SET @prevDepart := '00:00:00';
SET @prevStation := '   ';
INSERT INTO timetable_connection
SELECT @prevDepart, arrival_time, IF (stop_sequence = 1, '   ', @prevStation), parent_station, train_uid, monday, tuesday, wednesday, thursday, friday, saturday, sunday, start_date, end_date, atoc_code, IF (train_category='BS' OR train_category='BR', 'bus', 'train'), @prevStation := parent_station, @prevDepart := departure_time
FROM stop_times
LEFT JOIN stops USING (stop_id)
LEFT JOIN trips USING (trip_id)
LEFT JOIN calendar USING (service_id)
ORDER BY trip_id, stop_sequence ON DUPLICATE KEY UPDATE arrivalTime=arrival_time"

mysql -u root ojp -e "DELETE FROM timetable_connection WHERE origin = '   ' OR origin = destination OR departureTime > arrivalTime"
mysql -u root ojp -e "INSERT INTO interchange SELECT from_stop_id, min_transfer_time FROM transfers"
